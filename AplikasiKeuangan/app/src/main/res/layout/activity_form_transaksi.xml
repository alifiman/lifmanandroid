<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="alif.iman.aplikasikeuangan.FormTransaksi">

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Transaksi"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/inp_nama"
        android:layout_below="@+id/txt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_jenis"
        android:layout_below="@+id/inp_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <Spinner
        android:id="@+id/inp_jenis"
        android:layout_below="@+id/txt_jenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_jumlah"
        android:layout_below="@+id/inp_jenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/inp_jumlah"
        android:layout_below="@+id/txt_jumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_keterangan"
        android:layout_below="@+id/inp_jumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keterangan"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/inp_keterangan"
        android:layout_below="@+id/txt_keterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@id/inp_keterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH"
        android:textSize="25dp"
        android:textStyle="bold"
        android:onClick="saveTransaksi"/>


</RelativeLayout>
